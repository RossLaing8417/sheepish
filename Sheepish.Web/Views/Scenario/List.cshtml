@model List<ScenarioViewModel>

    <style>
        .table .w-60 {
            width: 60%;
        }
    </style>

    <h1>Sheepish</h1>

    <div class="d-flex justify-content-end">
        <a class="btn btn-primary" asp-controller="Scenario" asp-action="Add">New Scenario</a>
    </div>

    <table class="table table-hover">

        <thead>
            <tr>
                <th scope="col" class="w-60">Label</th>
                <th scope="col">Status</th>
                <th scope="col"></th>
            </tr>
        </thead>

        <tbody>
            @foreach(var item in Model)
            {
            <tr>
                <td>@item.Label</td>
                <td>@item.Status</td>
                <td>
                    <div class="d-flex justify-content-end">
                        @if(item.Status == "Configuring")
                        {
                        <a class="btn btn-primary" asp-controller="Scenario" asp-action="Edit"
                            asp-route-id="@item.Id">Edit</a>
                        }
                        else
                        {
                        <a class="btn btn-primary" asp-controller="Scenario" asp-action="View"
                            asp-route-id="@item.Id">View</a>
                        }
                    </div>
                </td>
            </tr>
            }
        </tbody>

    </table>
